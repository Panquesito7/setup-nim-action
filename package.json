{
  "name": "setup-nim",
  "version": "1.0.0",
  "private": true,
  "description": "setup nim action",
  "main": "lib/setup-nim.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "test": "jest",
    "check-deps": "depcheck"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jiro4989/setup-nim-actions.git"
  },
  "keywords": [
    "actions",
    "nim",
    "setup"
  ],
  "author": "GitHub",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@babel/parser": "^7.20.7",
    "compare-versions": "^5.0.3",
    "request": "^2.88.2",
    "request-promise": "^4.2.6"
  },
  "devDependencies": {
    "@actions/io": "^1.1.2",
    "@actions/tool-cache": "^2.0.1",
    "@types/jest": "^27.5.0",
    "@types/nock": "^11.1.0",
    "@types/node": "^18.11.18",
    "@types/semver": "^7.3.13",
    "depcheck": "^1.4.3",
    "husky": "^8.0.2",
    "jest": "^26.6.3",
    "prettier": "^2.8.3",
    "ts-jest": "^26.5.6",
    "typescript": "^4.9.4"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-commit": "npm run build && npm run format",
      "post-commit": "git add node_modules/* && git commit -m \"Husky commit correct node modules\""
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  }
}
